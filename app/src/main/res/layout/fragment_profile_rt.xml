<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.profileRTFragment"
    android:background="#f5f5f5"
    android:layout_marginBottom="60dp">
    <ImageView
        android:id="@+id/topheader"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@drawable/atas"/>
    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_below="@+id/topheader"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"

        >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fotoprofil"
            app:cardCornerRadius="5dp">
            <RelativeLayout
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/profil"
                android:layout_margin="30dp"
                android:layout_gravity="center"
                />

        </androidx.cardview.widget.CardView>


<!--        content-->
        <androidx.cardview.widget.CardView
            android:id="@+id/content"
            app:cardCornerRadius="5dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/fotoprofil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:id="@+id/header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/colorPrimary"
                    app:cardCornerRadius="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Biodata"
                        android:textStyle="bold"
                        android:textColor="#fff"
                        android:textSize="25dp"
                        android:layout_margin="15dp"/>

                </androidx.cardview.widget.CardView>

                <RelativeLayout
                    android:layout_below="@id/header"
                    android:id="@+id/l5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Username"
                        android:textSize="18dp"/>
                    <TextView
                        android:id="@+id/username"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Isi Conten"
                        android:textSize="18dp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_below="@+id/l5"
                    android:id="@+id/l1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">
                    <TextView
                        android:id="@+id/lbl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nama"
                        android:textSize="18dp"/>
                    <TextView
                        android:id="@+id/namaRt"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Isi Conten"
                        android:textSize="18dp"/>
                </RelativeLayout>

                <RelativeLayout

                    android:id="@+id/l2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/l1"
                    android:layout_marginTop="-6dp"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Desa"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/Ds"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="Isi Conten"
                        android:textSize="18dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_below="@+id/l2"
                    android:id="@+id/l3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RW"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/Rw"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="Isi Conten"
                        android:textSize="18dp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_below="@+id/l3"
                    android:id="@+id/l4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RT"
                        android:textSize="18dp"/>
                    <TextView
                        android:id="@+id/Rt"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Isi Conten"
                        android:textSize="18dp"/>
                </RelativeLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_below="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            android:layout_marginTop="10dp">
            <Button
                android:id="@+id/btn_logout"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Logout"
                android:textSize="18dp"
                android:layout_margin="8dp"
                android:textColor="#fff"
                android:backgroundTint="#ff193c"
                android:layout_gravity="center"/>

        </androidx.cardview.widget.CardView>
    </RelativeLayout>
    </ScrollView>

</RelativeLayout>