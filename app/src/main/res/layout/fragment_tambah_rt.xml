<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.tambahWargaFragment">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@drawable/atas"/>

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp"
        android:layout_marginTop="50dp">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical">


            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="20dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama"
                    android:id="@+id/labelNama"
                    android:textStyle="bold"
                    android:inputType="number"/>
                <EditText
                    android:id="@+id/getNama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/labelNama"/>


                <TextView
                    android:layout_below="@+id/getNama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jenis Kelamin"
                    android:id="@+id/labelJK"
                    android:textStyle="bold"/>

                <Spinner
                    android:id="@+id/getJK"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@id/labelJK"
                    android:entries="@array/jenis_kelamin"/>


                <TextView
                    android:layout_below="@+id/getJK"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alamat"
                    android:id="@+id/labelAlamat"
                    android:textStyle="bold"/>
                <EditText
                    android:id="@+id/getAlamat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/labelAlamat"/>
                <TextView
                    android:layout_below="@+id/getAlamat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RW"
                    android:id="@+id/labelRW"
                    android:textStyle="bold"/>
                <EditText
                    android:id="@+id/getRW"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/labelRW"
                    android:inputType="number"/>

                <TextView
                    android:layout_below="@+id/getRW"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RT"
                    android:id="@+id/labelRT"
                    android:textStyle="bold"/>
                <EditText
                    android:id="@+id/getRT"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/labelRT"
                    android:inputType="number"/>
                <TextView
                    android:layout_below="@+id/getRT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Username"
                    android:id="@+id/labelUsername"
                    android:textStyle="bold"/>
                <EditText
                    android:id="@+id/getUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/labelUsername"/>
                <TextView
                    android:layout_below="@+id/getUsername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:id="@+id/labelPass"
                    android:textStyle="bold"/>
                <EditText
                    android:id="@+id/getPass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/labelPass"
                    android:inputType="textPassword"/>
                <TextView
                    android:layout_below="@+id/getPass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Re-Type Password"
                    android:id="@+id/labelRePass"
                    android:textStyle="bold"/>
                <EditText
                    android:id="@+id/getRePass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/labelRePass"
                    android:inputType="textPassword"/>

                <Button
                    android:id="@+id/tombolSimpan"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/getRePass"
                    android:text="Tambah"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentRight="true"
                    android:backgroundTint="@color/colorPrimary"/>

            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>
</FrameLayout>